#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2
set -e # fail fast
set -o pipefail

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path

echo "-----> Starting sopcast buildpack"

cd $BUILD_DIR
cp -R $BIN_DIR/../* .
ls sp-auth/
chmod +x sp-auth/sp-sc-auth
echo "-----> Done"

exit 0
