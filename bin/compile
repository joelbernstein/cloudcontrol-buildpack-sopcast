#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2
set -e # fail fast
set -o pipefail

echo "-----> Starting sopcast buildpack"

cp -R ./* $BUILD_DIR

cd $BUILD_DIR

LD_PRELOAD=./sp-auth/lib/libstdc++.so.5.0.1:$LD_PRELOAD sp-auth/sp-sc-auth sop://broker.sopcast.com:3912/160000 11111 11112 &
pid=$?
sleep 5 && kill -9 $?
ls
echo "-----> Done"

exit 0
